        <!-- Load More Button -->
        <div class="flex justify-center">
          <button
            class="px-6 py-3 rounded-full bg-secondary-subBlue text-primary-darkblue font-medium hover:text-primary-yellow hover:bg-secondary-subYellow transition-colors flex items-center gap-2">
            <span>Xem thêm thông báo</span>
            <svg class="w-4 h-4" fill="none" viewbox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
