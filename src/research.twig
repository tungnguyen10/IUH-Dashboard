{% extends "./_templates/layout.twig" %}
{% set breadcrumbs = [ { title: 'Nghiên cứu khoa học', url: '/research' } ] %}
{% set pageClass = 'iuhResearch' %}
{% block page %}
<div class="w-full py-4 pb-6 lg:pt-0 lg:pb-16 relative" data-module="ChildResearch">
  <div class="w-full max-w-[1200px] px-4 mx-auto">
    {% include "./_components/page-header.twig" with { title: 'NGHIÊN CỨU KHOA HỌC' } %}
    <div class="w-full flex flex-col gap-4 sm:gap-8">
      <!-- Quick Links Grid - Enhanced -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        {% set list = [ { title: 'Thông tin về Nghiên cứu khoa học', url: '#',
        img: 'assets/images/icons/chemistry.png' }, { title: 'Văn bản biểu mẫu',
        url: '#', img: 'assets/images/icons/exam.png' }, { title: 'Tạp chí Khoa
        học & Công nghệ', url: '#', img:
        'assets/images/icons/scientific-literature.png' }, { title: 'Công trình
        nghiên cứu', url: '#', img: 'assets/images/icons/project.png' } ] %} {%
        for item in list %}
        <a href="{{ item.url }}"
          class="group relative flex w-full items-center gap-2 rounded-lg p-2 border border-gray-100 bg-secondary-subBlue/30 px-4 py-2 transition-all duration-500 hover:bg-primary-yellow/20 hover:border-primary-yellow/30 hover:shadow-2xl hover:-translate-y-2 overflow-hidden">

          <!-- Decorative Element -->
          <div
            class="absolute -bottom-1 -right-1 w-16 h-16 bg-primary-yellow/5 rounded-full blur-xl group-hover:bg-primary-yellow/10 transition-all duration-700 group-hover:scale-150">
          </div>

          <span
            class="text-sm font-medium flex-1 text-primary-darkblue group-hover:text-primary-yellow group-hover:translate-x-1 transition-all duration-500 relative z-10">{{
            item.title }}</span>
          <span
            class="size-10 shrink-0 group-hover:scale-110 group-hover:rotate-3 transition-all duration-500 relative z-10">
            <img src="{{ item.img }}" alt="{{ item.title }}" class="size-full object-cover" />
          </span>
        </a>
        {% endfor %}
      </div>

      <!-- Overview Section - Enhanced -->
      <div
        class="group relative bg-white rounded-xl shadow-lg border border-gray-100 transition-all duration-500 p-4 sm:p-6 lg:p-8 overflow-hidden">

        <!-- Decorative Element -->
        <div
          class="absolute -bottom-2 -right-2 w-20 h-20 bg-primary-yellow/5 rounded-full blur-2xl group-hover:bg-primary-yellow/10 transition-all duration-700 group-hover:scale-150">
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 sm:gap-6 lg:gap-8 items-center relative z-10">
          <!-- Content -->
          <div class="space-y-3 sm:space-y-4">
            <h2
              class="text-xl sm:text-2xl lg:text-3xl font-semibold text-primary-darkblue group-hover:text-primary-yellow transition-colors duration-500">
              Tổng quan</h2>
            <p class="text-sm sm:text-base lg:text-lg text-black1 leading-relaxed transition-colors duration-500">
              Nghiên cứu khoa học tại IUH là một trong những nhiệm vụ trọng tâm, góp phần nâng cao chất lượng đào tạo và
              phát triển công nghệ. Chúng tôi tập trung vào việc nghiên cứu các vấn đề thực tiễn, đáp ứng nhu cầu của xã
              hội và doanh nghiệp.
            </p>

            <!-- Enhanced Stats Grid -->
            <div class="grid grid-cols-2 sm:grid-cols-3 gap-3 sm:gap-4 mt-4 sm:mt-6">
              <div
                class="bg-secondary-subBlue/30 group-hover:bg-primary-yellow/20 rounded-lg p-3 sm:p-4 text-center transition-all duration-500 hover:scale-105">
                <span
                  class="block text-xl sm:text-2xl lg:text-3xl font-bold text-primary-darkblue group-hover:text-primary-yellow transition-colors duration-500">500+</span>
                <span class="text-xs sm:text-sm text-primary-darkblue transition-colors duration-500">Đề tài nghiên
                  cứu</span>
              </div>
              <div
                class="bg-secondary-subBlue/30 group-hover:bg-primary-yellow/20 rounded-lg p-3 sm:p-4 text-center transition-all duration-500 hover:scale-105">
                <span
                  class="block text-xl sm:text-2xl lg:text-3xl font-bold text-primary-darkblue group-hover:text-primary-yellow transition-colors duration-500">200+</span>
                <span class="text-xs sm:text-sm text-primary-darkblue transition-colors duration-500">Giảng viên tham
                  gia</span>
              </div>
              <div
                class="bg-secondary-subBlue/30 group-hover:bg-primary-yellow/20 rounded-lg p-3 sm:p-4 text-center col-span-2 sm:col-span-1 transition-all duration-500 hover:scale-105">
                <span
                  class="block text-xl sm:text-2xl lg:text-3xl font-bold text-primary-darkblue group-hover:text-primary-yellow transition-colors duration-500">50+</span>
                <span class="text-xs sm:text-sm text-primary-darkblue transition-colors duration-500">Đối tác hợp
                  tác</span>
              </div>
            </div>
          </div>

          <!-- Enhanced Image -->
          <div class="relative mt-4 lg:mt-0">
            <div class="aspect-w-16 aspect-h-12 rounded-xl overflow-hidden h-48 sm:h-64 lg:h-80">
              <img src="assets/images/biotech1.jpg" alt="Nghiên cứu khoa học tại IUH"
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" />
            </div>
            <div
              class="absolute -bottom-2 sm:-bottom-4 -right-2 sm:-right-4 w-16 h-16 sm:w-24 sm:h-24 bg-primary-yellow/10 rounded-full -z-10 group-hover:scale-150 group-hover:bg-primary-yellow/20 transition-all duration-700">
            </div>
            <div
              class="absolute -top-2 sm:-top-4 -left-2 sm:-left-4 w-12 h-12 sm:w-16 sm:h-16 bg-secondary-subBlue/50 rounded-full -z-10 group-hover:scale-125 group-hover:bg-primary-yellow/30 transition-all duration-700">
            </div>

            <div
              class="absolute bottom-2 sm:bottom-4 left-2 sm:left-4 right-2 sm:right-4 bg-white/90 backdrop-blur-sm rounded-lg p-2 sm:p-3 shadow-lg group-hover:bg-primary-yellow/10 group-hover:backdrop-blur-md transition-all duration-500">
              <p class="text-xs sm:text-sm text-primary-darkblue transition-colors duration-500">
                Phòng thí nghiệm hiện đại với các trang thiết bị nghiên cứu tiên tiến
              </p>
            </div>
          </div>
        </div>

        <!-- Enhanced Key Points -->
        <div class="mt-6 sm:mt-8 relative z-10 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
          {% set keyPoints = [
          {
          icon: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0
          117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
          title: 'Đổi mới sáng tạo',
          description: 'Thúc đẩy nghiên cứu đột phá và sáng tạo'
          },
          {
          icon: 'M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4
          6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
          title: 'Hợp tác quốc tế',
          description: 'Mở rộng quan hệ hợp tác nghiên cứu'
          },
          {
          icon: 'M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5
          10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4',
          title: 'Ứng dụng thực tiễn',
          description: 'Kết nối nghiên cứu với nhu cầu xã hội'
          }
          ] %}

          {% for point in keyPoints %}
          <div class="flex items-start gap-3 group/item">
            <div
              class="shrink-0 w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-secondary-subBlue flex items-center justify-center group-hover/item:bg-primary-yellow group-hover/item:scale-110 group-hover/item:rotate-3 transition-all duration-500">
              <svg
                class="w-4 h-4 sm:w-5 sm:h-5 text-primary-darkblue group-hover/item:text-white transition-colors duration-500"
                fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{ point.icon }}" />
              </svg>
            </div>
            <div class="flex-1 transform group-hover/item:translate-x-2 transition-transform duration-500">
              <h3
                class="text-sm sm:text-base font-medium text-primary-darkblue group-hover/item:text-primary-yellow transition-colors duration-500">
                {{ point.title }}</h3>
              <p class="text-xs sm:text-sm text-black1 transition-colors duration-500">{{ point.description }}</p>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>

      <!-- Research Objectives -->
      <div id="research-objectives"
        class="group relative bg-white rounded-xl shadow-lg border border-gray-100 transition-all duration-500 p-4 sm:p-6 lg:p-8 overflow-hidden">

        <!-- Decorative Element -->
        <div
          class="absolute -bottom-2 -right-2 w-20 h-20 bg-primary-yellow/5 rounded-full blur-2xl group-hover:bg-primary-yellow/10 transition-all duration-700 group-hover:scale-150">
        </div>

        <h2
          class="text-lg sm:text-xl lg:text-2xl font-semibold text-primary-darkblue mb-3 lg:mb-4 group-hover:text-primary-yellow transition-colors duration-500 relative z-10">
          Mục tiêu nghiên cứu</h2>

        <!-- Main Objective -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8 mb-8 relative z-10">
          <p class="text-sm sm:text-base text-black1 leading-relaxed order-2 lg:order-1 transition-colors duration-500">
            Bên cạnh là một hoạt động học thuật, việc nghiên cứu khoa học tại IUH còn đặt mục tiêu mang lại những giá
            trị thiết thực, thu hút giới trí thức quốc tế đến hợp tác, từ đó hiện thực hóa tầm nhìn trở thành một trong
            những đại học trẻ được ngưỡng mộ nhất châu Á.
          </p>
          <div class="relative h-48 lg:h-full w-full rounded-xl overflow-hidden aspect-video order-1 lg:order-2">
            <img src="assets/images/biotech2.png" alt="Nghiên cứu khoa học tại IUH"
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 " />
          </div>
        </div>

        <!-- Detailed Objectives Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 relative z-10">
          <!-- Research Quality -->
          <div
            class="group/objective relative bg-secondary-subBlue/30 rounded-xl overflow-hidden hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100 hover:border-primary-yellow/30">


            <div class="relative h-48">
              <img src="assets/images/biotech2.png" alt="Nâng cao chất lượng nghiên cứu"
                class="w-full h-full object-cover transition-transform duration-700 " />
              <div
                class="absolute inset-0 bg-gradient-to-t from-primary-darkblue/90 to-transparent group-hover/objective:from-primary-darkblue/80 transition-all duration-500">
              </div>
            </div>
            <div class="p-4 sm:p-6 relative z-10">
              <div class="flex items-center gap-3 mb-4">
                <div
                  class="w-10 h-10 rounded-full bg-secondary-subBlue flex items-center justify-center shrink-0 group-hover/objective:bg-primary-yellow group-hover/objective:scale-110 group-hover/objective:rotate-3 transition-all duration-500">
                  <svg
                    class="w-5 h-5 text-primary-darkblue group-hover/objective:text-white transition-colors duration-500"
                    fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                  </svg>
                </div>
                <h3
                  class="text-lg font-semibold text-primary-darkblue group-hover/objective:text-primary-yellow transition-colors duration-500">
                  Nâng cao chất lượng nghiên cứu
                </h3>
              </div>
              <ul class="space-y-2 text-black1 transition-colors duration-500">
                <li class="flex items-center gap-2">
                  <span
                    class="w-1.5 h-1.5 rounded-full bg-primary-darkblue shrink-0 group-hover/objective:bg-primary-yellow transition-colors duration-500"></span>
                  Phát triển các công nghệ mới và ứng dụng vào thực tiễn
                </li>
                <li class="flex items-center gap-2">
                  <span
                    class="w-1.5 h-1.5 rounded-full bg-primary-darkblue shrink-0 group-hover/objective:bg-primary-yellow transition-colors duration-500"></span>
                  Nâng cao năng lực nghiên cứu cho giảng viên và sinh viên
                </li>
              </ul>
            </div>
          </div>

          <!-- Practical Focus -->
          <div
            class="group/objective relative bg-secondary-subBlue/30 rounded-xl overflow-hidden hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100 hover:border-primary-yellow/30">

            <div class="relative h-48">
              <img src="assets/images/biotech2.png" alt="Chú trọng tính thực tiễn"
                class="w-full h-full object-cover transition-transform duration-700" />
              <div
                class="absolute inset-0 bg-gradient-to-t from-primary-darkblue/90 to-transparent group-hover/objective:from-primary-darkblue/80 transition-all duration-500">
              </div>
            </div>
            <div class="p-4 sm:p-6 relative z-10">
              <div class="flex items-center gap-3 mb-4">
                <div
                  class="w-10 h-10 rounded-full bg-secondary-subBlue flex items-center justify-center shrink-0 group-hover/objective:bg-primary-yellow group-hover/objective:scale-110 group-hover/objective:rotate-3 transition-all duration-500">
                  <svg
                    class="w-5 h-5 text-primary-darkblue group-hover/objective:text-white transition-colors duration-500"
                    fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                </div>
                <h3
                  class="text-lg font-semibold text-primary-darkblue group-hover/objective:text-primary-yellow transition-colors duration-500">
                  Chú trọng tính thực tiễn
                </h3>
              </div>
              <ul class="space-y-2 text-black1 transition-colors duration-500">
                <li class="flex items-center gap-2">
                  <span
                    class="w-1.5 h-1.5 rounded-full bg-primary-darkblue shrink-0 group-hover/objective:bg-primary-yellow transition-colors duration-500"></span>
                  Đóng góp vào sự phát triển kinh tế - xã hội của đất nước
                </li>
                <li class="flex items-center gap-2">
                  <span
                    class="w-1.5 h-1.5 rounded-full bg-primary-darkblue shrink-0 group-hover/objective:bg-primary-yellow transition-colors duration-500"></span>
                  Tạo ra các giải pháp thiết thực cho doanh nghiệp và cộng đồng
                </li>
              </ul>
            </div>
          </div>

          <!-- Internationalization -->
          <div
            class="group/objective relative bg-secondary-subBlue/30 rounded-xl overflow-hidden hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100 hover:border-primary-yellow/30">


            <div class="relative h-48">
              <img src="assets/images/biotech2.png" alt="Đa dạng và quốc tế hóa"
                class="w-full h-full object-cover transition-transform duration-700" />
              <div
                class="absolute inset-0 bg-gradient-to-t from-primary-darkblue/90 to-transparent group-hover/objective:from-primary-darkblue/80 transition-all duration-500">
              </div>
            </div>
            <div class="p-4 sm:p-6 relative z-10">
              <div class="flex items-center gap-3 mb-4">
                <div
                  class="w-10 h-10 rounded-full bg-secondary-subBlue flex items-center justify-center shrink-0 group-hover/objective:bg-primary-yellow group-hover/objective:scale-110 group-hover/objective:rotate-3 transition-all duration-500">
                  <svg
                    class="w-5 h-5 text-primary-darkblue group-hover/objective:text-white transition-colors duration-500"
                    fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <h3
                  class="text-lg font-semibold text-primary-darkblue group-hover/objective:text-primary-yellow transition-colors duration-500">
                  Đa dạng và quốc tế hóa
                </h3>
              </div>
              <ul class="space-y-2 text-black1 transition-colors duration-500">
                <li class="flex items-center gap-2">
                  <span
                    class="w-1.5 h-1.5 rounded-full bg-primary-darkblue shrink-0 group-hover/objective:bg-primary-yellow transition-colors duration-500"></span>
                  Tăng cường hợp tác quốc tế trong nghiên cứu khoa học
                </li>
                <li class="flex items-center gap-2">
                  <span
                    class="w-1.5 h-1.5 rounded-full bg-primary-darkblue shrink-0 group-hover/objective:bg-primary-yellow transition-colors duration-500"></span>
                  Thu hút các nhà nghiên cứu quốc tế đến hợp tác
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Research Fields - Enhanced -->
      <div id="research-fields"
        class="group relative bg-white rounded-xl shadow-lg border border-gray-100 transition-all duration-500 p-4 sm:p-6 lg:p-8 overflow-hidden">

        <!-- Header with Enhanced Hero Image -->
        <div class="relative rounded-xl overflow-hidden mb-6 sm:mb-8 lg:mb-10 group/hero">
          <div class="h-[200px] sm:h-[300px] lg:h-[400px]">
            <img src="assets/images/biotech2.png" alt="Nghiên cứu khoa học tại IUH"
              class="w-full h-full object-cover transition-transform duration-700 group-hover/hero:scale-105" />
          </div>
          <div
            class="absolute inset-0 bg-gradient-to-r from-primary-darkblue/70 via-primary-darkblue/50 to-transparent group-hover/hero:from-primary-darkblue/80 transition-all duration-500">
            <div
              class="h-full flex flex-col justify-center p-4 sm:p-6 lg:p-8 max-w-2xl transform group-hover/hero:translate-x-2 transition-transform duration-500">
              <h2
                class="text-lg sm:text-xl lg:text-3xl font-semibold text-white mb-2 sm:mb-3 lg:mb-4 group-hover/hero:text-primary-yellow transition-colors duration-500">
                Lĩnh vực nghiên cứu trọng tâm
              </h2>
              <p
                class="text-xs sm:text-sm lg:text-base text-gray-200 leading-relaxed line-clamp-3 sm:line-clamp-none group-hover/hero:text-white transition-colors duration-500">
                Tại IUH, các giảng viên cùng trí thức từ nhiều lĩnh vực khác nhau cùng tham gia nghiên cứu khoa học để
                mang lại lợi ích cho cộng đồng và thúc đẩy xã hội phát triển.
              </p>
            </div>
          </div>
        </div>

        <!-- Enhanced Research Fields Grid -->
        <div class="w-full">
          <div class="swiper_research swiper !pb-12 sm:!pb-14 lg:!pb-16">
            <div class="swiper-wrapper">
              {% for i in 1..6 %}
              <div class="swiper-slide px-1 sm:px-2">
                <div
                  class="group/field relative bg-secondary-subBlue/30 rounded-xl overflow-hidden hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100 hover:border-primary-yellow/30 h-full">


                  <div class="relative h-36 sm:h-40 lg:h-48">
                    <img src="assets/images/biotech2.png" alt="Công nghệ và Kỹ thuật"
                      class="w-full h-full object-cover transition-transform duration-700 " />
                    <div
                      class="absolute inset-0 bg-gradient-to-t from-primary-darkblue/80 via-primary-darkblue/50 to-transparent group-hover/field:from-primary-darkblue/90 transition-all duration-500">
                    </div>
                    <div class="absolute bottom-0 left-0 right-0 p-3 sm:p-4">
                      <div class="flex items-center gap-2 sm:gap-3">
                        <div
                          class="w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-secondary-subBlue backdrop-blur-sm flex items-center justify-center shrink-0 group-hover/field:bg-primary-yellow group-hover/field:scale-110 transition-all duration-500">
                          <svg
                            class="w-4 h-4 sm:w-5 sm:h-5 text-primary-darkblue group-hover/field:text-white transition-colors duration-500"
