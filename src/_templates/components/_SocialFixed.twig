<div class="fixed bottom-4 right-4 md:bottom-8 md:right-8 z-50 flex flex-col gap-4">
	<!-- Scroll to top button -->
	<button 
		id="scrollToTop" 
		class="w-12 h-12 bg-navyBlue-600 hover:bg-navyBlue-700 text-white rounded-full shadow-lg transition-all duration-300 flex items-center justify-center opacity-0 invisible"
		aria-label="Scroll to top"
	>
		<svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
			<path d="M12 4L4 12M12 4L20 12M12 4V20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
		</svg>
	</button>

