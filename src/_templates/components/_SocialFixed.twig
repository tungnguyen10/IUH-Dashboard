				href="{{ social.url }}" 
				target="_blank"
				rel="noopener noreferrer"
				class="social-icon z-1 cursor-pointer absolute inset-0 flex items-center justify-center {{ social.bg }} text-white rounded-full shadow-lg transition-all duration-300 {% if not loop.first %}opacity-0{% endif %}"
				data-index="{{ loop.index0 }}"
			>
				{{ social.icon | raw }}
			</a>
		{% endfor %}
