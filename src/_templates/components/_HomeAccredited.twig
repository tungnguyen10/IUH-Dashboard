<div class="iuhFadeInScroll w-full relative iuh-accredited overflow-hidden" data-module="HomeAccredited">
  <div class="w-full max-w-[1200px] px-4 mx-auto py-10 lg:py-16 flex flex-col">
    {% include '../common/_Title.twig' with {'title': 'Các chương trình đạt kiểm định', 'subtitle':'TRONG NƯỚC VÀ QUỐC
    TẾ', titleClass:"flex-col items-center", subtitleClass:"text-lg lg:text-2xl font-bold uppercase"}
    %}

    <div class="w-full flex flex-col lg:flex-row gap-5 items-center mt-10 lg:mt-14">
      <div class="canvas-quarters-container">
        <canvas id="quarters-canvas" class="w-full aspect-square md:w-[500px] !h-auto cursor-pointer" data-config='{
    "centerLogo": "assets/images/logo-circle.png",
    "canvasSize": 500,
    "centerRadius": 42,
    "segmentGap": 6,
    "quarterGap": 4,
    "outerCornerRadius": 15,
    "rotationOffset": 0,
    "rotationAnimationSpeed": 0.18,
    "quarterColors": [
      { "bg": "#e8f5e8", "border": "#4CAF50", "text": "#2E7D32" },
      { "bg": "#fff3e0", "border": "#FF9800", "text": "#E65100" },
      { "bg": "#e3f2fd", "border": "#2196F3", "text": "#0D47A1" },
      { "bg": "#fce4ec", "border": "#E91E63", "text": "#880E4F" },
      { "bg": "#f3e5f5", "border": "#9C27B0", "text": "#4A148C" },
      { "bg": "#e0f2f1", "border": "#009688", "text": "#004D40" }

    ],
    "quarters": [
      { "id": "vnu-cea", "tabId": "tab1", "image": "assets/images/cea-circle.png", "title": "VNU-CEA", "active": false },
      { "id": "aun-qa", "tabId": "tab2", "image": "assets/images/aun-circle.png", "title": "AUN-QA", "active": true },
      { "id": "abet", "tabId": "tab3", "image": "assets/images/abet-circle.png", "title": "ABET", "active": false },
      { "id": "other", "tabId": "tab4", "image": "assets/images/abet-circle.png", "title": "Other", "active": false },
      { "id": "iso", "tabId": "tab5", "image": "assets/images/iso-circle.png", "title": "ISO", "active": false },
      { "id": "international", "tabId": "tab6", "image": "assets/images/international-circle.png", "title": "International", "active": false }
    ],
    "centerLogoAnimation": {
      "pulse": { "minScale": 0.8, "maxScale": 1.0, "speed": 0.02 },
      "borderSpeed": 0.05
    }
  }'>
        </canvas>
      </div>

      <!-- Tab content -->
      <div class=" tab-content">
        {% set tabs = [
        {
        id: 'tab1',
        active: false,
        image: 'assets/images/vnu-1.png',
        title: 'Accreditation Board for Engineering and Technology - (Hội đồng Kiểm định Kỹ thuật và Công nghệ, Hoa
        Kỳ)',
        programs: [
        'Hóa phân tích',
        'Kỹ thuật Điện tử',
        'Kỹ thuật Điện',
        'Kế toán',
        'Công nghệ Thực phẩm',
        'Luật Kinh tế',
        'Kỹ thuật Xây dựng',
        'Quản lý Tài nguyên và Môi trường',
        'Kiểm toán',
        'Tài chính - Ngân hàng'
        ]
        },
        {
        id: 'tab2',
        active: true,
        image: 'assets/images/aun-1.png',
        title: 'ASEAN University Network - Quality Assurance (Mạng lưới Đảm bảo chất lượng các trường đại học ASEAN)',
        programs: [
        'Hóa phân tích',
        'Kỹ thuật Điện tử',
        'Kỹ thuật Điện',
        'Kế toán',
        'Công nghệ Thực phẩm',
