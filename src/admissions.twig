{% extends "./_templates/layout.twig" %}
{% set breadcrumbs = [ { title: 'Tuyển sinh', url: '/admissions' } ] %}
{% set pageClass = 'iuhAdmissions' %}
{% block page %}
<div class="w-full py-4 pb-8 lg:pt-0 lg:pb-16 relative" data-module="">
  <div class="w-full max-w-[1200px] px-4 mx-auto">
    <div class="w-full flex flex-col gap-12 sm:gap-16">
      <!-- Hero Section with Background -->
      <div class="relative h-[300px] sm:h-[350px] lg:h-[400px] rounded-2xl overflow-hidden">
        <img src="assets/images/program-image.png" alt="IUH Campus" class="w-full h-full object-cover">
        <div
          class="absolute inset-0 bg-gradient-to-r from-primary-darkblue/80 via-primary-darkblue/40 to-secondary-subBlue/0 backdrop-blur-[1px]">
          <div class="h-full flex flex-col justify-center px-4 sm:px-8 lg:px-16 max-w-full sm:max-w-2xl">
            <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-4 sm:mb-6">Tuyển sinh 2024</h1>
            <div class="text-lg line-clamp-3 text-white/90 mb-8">IUH - Nơi đào tạo những thế hệ sinh viên tài năng, sáng
              tạo và đầy
              nhiệt huyết.</div>
            <div class="flex flex-col sm:flex-row gap-3 sm:gap-4">
              <a href="#"
                class="w-full sm:w-auto text-center px-6 py-3 bg-white text-primary-darkblue rounded-full font-medium hover:bg-primary-yellow hover:text-white transition-colors">
                Xem thông tin tuyển sinh
              </a>
              <a href="#"
                class="w-full sm:w-auto text-center px-6 py-3 bg-primary-darkblue text-white rounded-full font-medium hover:bg-primary-yellow transition-colors">
                Đăng ký ngay
              </a>
            </div>
          </div>
        </div>
      </div>



      <!-- Slogan and About IUH -->
      <div class="flex flex-col gap-4 sm:gap-8">
        {% include './_templates/common/_TitleChild.twig' with {
        title: 'Đôi nét về IUH',
        titleClass: '',
        svgIcon: '<svg class="size-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
        </svg>'
        } %}

        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
          <div class="flex flex-col lg:flex-row">
            <!-- Image Section with Overlay -->
            <div class="lg:w-1/2 relative">
              <div class="aspect-video sm:aspect-[4/3] lg:aspect-auto lg:h-full relative overflow-hidden group">
                <img src="https://iuh2.iuh.edu.vn/upload/images/2025/toanhae.jpg" alt="About IUH"
                  class="w-full min-h-full h-full object-cover transition-transform duration-700 group-hover:scale-110">
                <!-- Stats Overlay -->
                <div class="absolute bottom-0 left-0 right-0 p-4 sm:p-6 grid grid-cols-2 gap-4">
                  <div class="bg-primary-darkblue/40 backdrop-blur-sm rounded-lg p-2 sm:p-4">
                    <div class="text-xl sm:text-3xl font-bold text-white">65+</div>
                    <div class="text-sm text-white/80">Năm phát triển</div>
                  </div>
                  <div class="bg-primary-darkblue/40 backdrop-blur-sm rounded-lg p-2 sm:p-4">
                    <div class="text-xl sm:text-3xl font-bold text-white">20+</div>
                    <div class="text-sm text-white/80">Ngành đào tạo</div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Content Section -->
            <div class="lg:w-1/2 p-6 lg:p-8 xl:p-12 flex flex-col justify-center">
              <div class="space-y-6">
                <!-- Vision -->
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 rounded-full bg-secondary-subBlue flex items-center justify-center shrink-0">
                    <svg class="w-6 h-6 text-primary-darkblue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-xl font-semibold text-primary-darkblue mb-2">Tầm nhìn</h3>
                    <div class="text-black1 line-clamp-3">Trở thành một trong những trường đại học hàng đầu tại Việt Nam
                      và khu vực.</div>
                  </div>
                </div>

                <!-- Mission -->
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 rounded-full bg-secondary-subBlue flex items-center justify-center shrink-0">
                    <svg class="w-6 h-6 text-primary-darkblue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-xl font-semibold text-primary-darkblue mb-2">Sứ mệnh</h3>
                    <div class="text-black1">Đào tạo nguồn nhân lực chất lượng cao, nghiên cứu khoa học và chuyển giao
                      công nghệ, phục vụ sự phát triển kinh tế - xã hội của đất nước.</div>
                  </div>
                </div>

                <!-- Strategic Goals -->
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 rounded-full bg-secondary-subBlue flex items-center justify-center shrink-0">
                    <svg class="w-6 h-6 text-primary-darkblue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-xl font-semibold text-primary-darkblue mb-2">Mục tiêu chiến lược</h3>
                    <ul class="space-y-2">
                      <li class="flex items-center gap-2 text-black1">
                        <svg class="w-4 h-4 text-primary-darkblue shrink-0" fill="none" viewBox="0 0 24 24"
                          stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        <span>Phát triển đào tạo đa ngành, đa lĩnh vực</span>
                      </li>
                      <li class="flex items-center gap-2 text-black1">
                        <svg class="w-4 h-4 text-primary-darkblue shrink-0" fill="none" viewBox="0 0 24 24"
                          stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        <span>Nâng cao chất lượng nghiên cứu khoa học</span>
                      </li>
                      <li class="flex items-center gap-2 text-black1">
                        <svg class="w-4 h-4 text-primary-darkblue shrink-0" fill="none" viewBox="0 0 24 24"
                          stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        <span>Mở rộng hợp tác quốc tế</span>
                      </li>
                    </ul>
                  </div>
                </div>

                <!-- Description -->
                <div class="text-black1 leading-relaxed">
                  Trường Đại học Công nghiệp TP.HCM (IUH) nổi bật với:
                </div>
                <ul class="space-y-3">
                  <li class="flex items-center gap-3 text-black1">
                    <svg class="w-5 h-5 text-primary-darkblue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span>Chương trình đào tạo đa ngành hiện đại</span>
                  </li>
                  <li class="flex items-center gap-3 text-black1">
                    <svg class="w-5 h-5 text-primary-darkblue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span>Đội ngũ giảng viên giàu kinh nghiệm</span>
                  </li>
                  <li class="flex items-center gap-3 text-black1">
                    <svg class="w-5 h-5 text-primary-darkblue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span>Cơ sở vật chất và trang thiết bị hiện đại</span>
                  </li>
                </ul>

                <!-- CTA Button -->
                <a href="#"
                  class="inline-flex items-center gap-2 text-primary-darkblue font-medium hover:gap-3 transition-all mt-4">
                  Tìm hiểu thêm về IUH
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Quick Stats -->
      {% set quickStats = [
      { number: '65+', label: 'Năm phát triển', icon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z' },
      { number: '20+', label: 'Ngành đào tạo', icon: 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3
      6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5
      1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253' },
      { number: '50+', label: 'Đối tác quốc tế', icon: 'M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8
      3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9
      0 11-18 0 9 9 0 0118 0z' },
      { number: '90%', label: 'Tỷ lệ có việc làm', icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z' }
      ] %}

      <div class="grid grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-6">
        {% for stat in quickStats %}
        <div
          class="group bg-white rounded-xl p-4 sm:p-6 shadow-lg border border-gray-100 hover:shadow-xl hover:border-primary-yellow/30 transition-all duration-500 hover:-translate-y-2 relative overflow-hidden">
          <!-- Background Animation -->
          <div
            class="absolute inset-0 bg-gradient-to-br from-primary-yellow/0 to-primary-yellow/0 group-hover:from-primary-yellow/5 group-hover:to-primary-darkblue/5 transition-all duration-500">
          </div>

          <div class="flex flex-row justify-between gap-2">
            <!-- Number -->
            <div
              class="relative text-2xl sm:text-4xl font-bold text-primary-darkblue mb-1 sm:mb-2 group-hover:text-primary-yellow transition-all duration-500 group-hover:scale-110 transform-gpu">
              {{ stat.number }}
            </div>
            <!-- Icon -->
            <div class="relative mb-3 sm:mb-4">
              <div
                class="w-10 h-10 sm:w-12 sm:h-12 rounded-lg bg-secondary-subBlue/30 group-hover:bg-primary-yellow/20 flex items-center justify-center transition-all duration-500 group-hover:scale-110 group-hover:rotate-3">
                <svg
                  class="w-5 h-5 sm:w-6 sm:h-6 text-primary-darkblue group-hover:text-primary-yellow transition-colors duration-500"
                  fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{ stat.icon }}" />
                </svg>
              </div>
            </div>


          </div>

          <!-- Label -->
          <div
            class="relative text-xs sm:text-sm text-black1 group-hover:text-primary-yellow transition-all duration-500 group-hover:scale-110 transform-gpu">
            {{ stat.label }}
          </div>

          <!-- Decorative Element -->
          <div
            class="absolute -bottom-2 -right-2 w-20 h-20 bg-primary-yellow/5 rounded-full blur-2xl group-hover:bg-primary-yellow/10 transition-all duration-700 group-hover:scale-150">
          </div>
        </div>
        {% endfor %}
      </div>
      <!-- Additional Information -->
      <div class="flex flex-col gap-5 sm:gap-8">
        <!-- Section Header -->

        {% include './_templates/common/_TitleChild.twig' with {
        title: 'Thành tựu nổi bật',
        titleClass: '',
        svgIcon: '
        <svg class="size-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>'
        } %}

        <!-- Cards Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-8">
          {% set achievements = [
          {
          title: "Hơn 65 năm phát triển",
          desc: "IUH đã có hơn 6 thập kỷ xây dựng và phát triển, trở thành một trong những trường đại học uy tín tại
          Việt Nam.",
          icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z",
          image: "assets/images/program-image.png",
          stats: "65+"
          },
          {
          title: "Đào tạo hơn 20 ngành học",
          desc: "Trường cung cấp nhiều chương trình đào tạo đại học và sau đại học, từ kỹ thuật, công nghệ thông tin đến
          quản trị kinh doanh.",
          icon: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5
          18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247
          18 16.5 18c-1.746 0-3.332.477-4.5 1.253",
          image: "assets/images/program-image.png",
          stats: "20+"
          },
          {
          title: "Đào tạo hơn 20 ngành học",
          desc: "Trường cung cấp nhiều chương trình đào tạo đại học và sau đại học, từ kỹ thuật, công nghệ thông tin đến
          quản trị kinh doanh.",
          icon: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5
          18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247
          18 16.5 18c-1.746 0-3.332.477-4.5 1.253",
          image: "assets/images/program-image.png",
          stats: "20+"
          }
          ] %}

          {% for item in achievements %}
          <div
            class="group relative bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-all duration-500 border border-gray-100">
            <!-- Card Header with Image -->
            <div class="relative aspect-video sm:aspect-[4/3] overflow-hidden">
              <img src="{{ item.image }}" alt="{{ item.title }}"
                class="w-full min-h-full object-cover transition-transform duration-700 group-hover:scale-110">
              <div
                class="absolute inset-0 bg-gradient-to-t from-primary-yellow to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                <div class="absolute bottom-4 left-4 text-white">
                  <div class="text-4xl font-bold mb-1">{{ item.stats }}</div>
                  <div class="text-sm opacity-80">Thành tựu</div>
                </div>
              </div>
            </div>

            <!-- Card Content -->
            <div class="flex flex-col gap-4 sm:gap-6 p-4 sm:p-6 relative">
              <!-- Icon Badge -->
              <div
                class="absolute -top-8 right-6 size-16 rounded-2xl bg-white shadow-lg flex items-center justify-center group-hover:bg-secondary-subYellow transition-colors duration-500">
                <svg class="size-8 text-primary-darkblue group-hover:text-primary-yellow transition-colors duration-500"
                  fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="{{ item.icon }}" />
                </svg>
              </div>

              <h3 class="text-xl font-bold text-primary-darkblue group-hover:text-primary-yellow transition-colors">
                {{ item.title }}
              </h3>
              <div class="text-black1 line-clamp-3 leading-relaxed">{{ item.desc }}</div>

              <!-- Action Link -->
              <a href="#"
                class="inline-flex items-center gap-2 text-primary-darkblue group-hover:text-primary-yellow font-medium group-hover:gap-3 transition-all">
                Xem chi tiết
                <svg class="w-4 h-4 rounded-full px-0.5 group-hover:bg-primary-yellow group-hover:text-white"
                  fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>

      <!-- Tuyển sinh Đại học -->
      <div class="flex flex-col gap-4 sm:gap-8">
        {% include './_templates/common/_TitleChild.twig' with {
        title: 'Tuyển sinh Đại học',
        titleClass: '',
        svgIcon: '<svg class="size-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
        </svg>'
        } %}


        <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 sm:gap-8">
          <!-- Main Program Card -->
          <div
            class="relative cursor-pointer flex flex-col lg:flex-row lg:col-span-3 bg-gradient-to-br from-primary-darkblue via-primary-darkblue/70 to-secondary-blue rounded-xl shadow-xl overflow-hidden group">
            <!-- Decorative Elements -->
            <div
              class="absolute top-0 right-0 w-64 h-64 bg-primary-yellow/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 group-hover:scale-150 transition-transform duration-700">
            </div>
            <div
              class="absolute bottom-0 left-0 w-48 h-48 bg-secondary-subBlue/20 rounded-full blur-2xl translate-y-1/2 -translate-x-1/2 group-hover:scale-125 transition-transform duration-700">
            </div>

            <!-- Image Section -->
            <div class="lg:w-1/2 relative aspect-video lg:aspect-auto">
              <img src="assets/images/cooperation.png" alt="Đại học"
                class="w-full min-h-full object-cover transition-transform duration-700 group-hover:scale-105">
              <div
                class="absolute inset-0 bg-gradient-to-r from-primary-darkblue/80 via-primary-darkblue/40 to-transparent">
              </div>

              <!-- Stats Badge on Image -->
              <div class="absolute bottom-6 left-6 flex gap-3">
                <div class="bg-white/95 backdrop-blur-sm rounded-lg px-4 py-2 shadow-lg">
                  <div class="text-2xl font-bold text-primary-darkblue">20+</div>
                  <div class="text-xs text-primary-darkblue/70">Ngành học</div>
                </div>
                <div class="bg-white/95 backdrop-blur-sm rounded-lg px-4 py-2 shadow-lg">
                  <div class="text-2xl font-bold text-primary-darkblue">4</div>
                  <div class="text-xs text-primary-darkblue/70">Năm</div>
                </div>
              </div>
            </div>

            <!-- Content Section with Decorative Elements -->
            <div class="relative px-4 py-6 sm:p-8 lg:p-10 lg:w-1/2 flex flex-col gap-4 sm:gap-6 justify-center">
              <!-- Decorative Lines -->
              <div class="absolute top-8 right-8 w-20 h-20 border-2 border-primary-yellow/20 rounded-lg rotate-12">
              </div>
              <div class="absolute bottom-12 right-12 w-16 h-16 border-2 border-white/10 rounded-full"></div>

              <h3 class="text-2xl sm:text-3xl font-bold text-white relative z-10 group-hover:text-primary-yellow">Chương
                trình Đại học</h3>

              <div class="flex flex-wrap items-center gap-4 sm:gap-6 relative z-10">
                <span class="flex items-center gap-2 text-white backdrop-blur-sm px-3 py-1.5 rounded-full">
                  <svg class="w-5 h-5 text-primary-yellow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="font-medium">4 năm</span>
                </span>
                <span class="flex items-center gap-2 text-white backdrop-blur-sm px-3 py-1.5 rounded-full">
                  <svg class="w-5 h-5 text-primary-yellow" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
